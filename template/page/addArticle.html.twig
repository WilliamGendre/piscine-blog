{% extends 'base.html.twig' %}

{% block content %}

<!-- extends permet d'apelé la partie du site qui ne change jamais -->

<!-- block permet d'intégrer la partie au reste de la page -->

<main class="littleMain">

    <h1>Envoie d'article</h1>

    <!-- Penser à mettre le formulaire en method="post", sinon sa ne marchera pas -->
    <form method="post">
        <label><h2>Titre</h2>
            <input type="text" name="title">
        </label>
        <label><p>Contenue</p>
            <input type="text" name="content">
        </label>
        <input type="submit">
    </form>

    {% if isRequestOk %}

        <p id="articleEnregistrer">L'article a été enregistré avec succès</p>

    <!-- ferme la balise if  -->
    {% endif %}

</main>
{% endblock %}